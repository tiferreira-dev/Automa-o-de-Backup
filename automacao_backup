# Projeto de automação de Backup.py

#janela ppara selecionara pasta do nosso computador

import os
from tkinter.filedialog import askdirectory
import shutil
import datetime

nome_pasta_selecionada = askdirectory()


lista_aqruivos = os.listdir(nome_pasta_selecionada)


# fazer o backup dos arquivos que estão nessa pasta

nome_pasta_backup = 'backup'
nome_completa_pasta_backup = f'{nome_pasta_selecionada}/{nome_pasta_backup}'
if not os.path.exists(nome_completa_pasta_backup):
    os.mkdir(nome_completa_pasta_backup)

data_atual = datetime.datetime.today().strftime('%y-%m-%d-%H%M%S')


for arquivo in lista_aqruivos:
    nome_completo_arquivo = f'{nome_pasta_selecionada}/{arquivo}'
    nome_final_arquivo = f'{nome_completa_pasta_backup}/{data_atual}/{arquivo}'
    if not os.path.exists(f'{nome_completa_pasta_backup}/{data_atual}'):
        os.mkdir(f'{nome_completa_pasta_backup}/{data_atual}')

    if'.' in arquivo:
        shutil.copy2(nome_completo_arquivo, nome_final_arquivo)
    elif 'backup' != arquivo:
        shutil.copytree(nome_completo_arquivo, nome_final_arquivo)
